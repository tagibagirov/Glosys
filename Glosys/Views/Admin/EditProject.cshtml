@model Project
<section class="add-product">
    <form asp-controller="admin" asp-action="editproject" asp-route-id="@Model.ProjectId" method="post" enctype="multipart/form-data" class="add-product-box">
        <h2>Edit Project</h2>
        <span asp-validation-for="ProjectName" class="validation"></span>
        <div class="input-form">
            <label for="ProjectName" class="placeholder">Project name</label>
            <input class="form-item" asp-for="ProjectName" />
        </div>
        <span asp-validation-for="ProjectInfo" class="validation"></span>
        <div class="input-form">
            <label for="ProjectInfo" class="placeholder">Description</label>
            <textarea class="form-item" rows="4" asp-for="ProjectInfo"></textarea>
        </div>
        <div class="input-form" style="margin-bottom:0;">
            <label class="add-product-photo" for="projectPhoto">
                Add Photo
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-camera-fill" viewBox="0 0 16 16">
                    <path d="M10.5 8.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                    <path d="M2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4zm.5 2a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m9 2.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0" />
                </svg>
            </label>
            <input class="form-item" name="projectPhotoList" id="projectPhoto" type="file" style="display: none;" />
        </div>
        <div class="add-photo-list" style="margin-top: 15px;">
            @foreach (ProjectPhoto photo in Model.ProjectPhotos)
            {
                <div class="add-photo-item">
                    <img src="/img/projectsPhoto/@photo.ProjectPhotoName" alt="Photo" />
                    <div class="dlt-photo old-photo" photoId="@photo.PhotoId"><i class="fa-solid fa-xmark"></i></div>
                </div>
            }
        </div>
        <input class="form-item" name="DeletedPhoto" id="deleted-photo" type="hidden" />

        <button style="margin-top: 30px;">
            Edit<svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
            </svg>
        </button>
    </form>
</section>
@section Scripts {
    <script>
        if ($(window).width() >= 768) {
            const box = document.querySelector("nav");
            const svgItem = document.querySelectorAll("nav svg path")
            const logo = document.querySelector(".nav-left img")
            if (window.scrollY == 0) {
                box.classList.remove('nav-scrolled');
                svgItem.forEach(function (element) {
                    element.setAttribute('stroke', 'white')
                })
                logo.setAttribute('src', '/img/GLOSYS.png')
            }
            document.addEventListener('scroll', function () {

                if (window.scrollY > 0) {
                    box.classList.add('nav-scrolled');
                    svgItem.forEach(function (element) {
                        element.setAttribute('stroke', '#002E4C')
                    })
                    logo.setAttribute('src', '/img/GLOSYS-dark.png')
                } else {
                    box.classList.remove('nav-scrolled');
                    svgItem.forEach(function (element) {
                        element.setAttribute('stroke', 'white')
                    })
                    logo.setAttribute('src', '/img/GLOSYS.png')
                }
            });
        }

    </script>
}